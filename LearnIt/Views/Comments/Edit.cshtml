@model LearnIt.Models.Comment

<div class="card shadow p-3 mb-5 bg-white rounded">
    <div class="card-body p-3">
@using (Html.BeginForm(actionName: "Edit", controllerName: "Comments", method: FormMethod.Post, routeValues: new  { id = Model.Id }))
{
    @Html.Label("Content", "Editeaza comentariul")
    <br />
    @Html.TextBox("Content" ,@Model.Content , new{@class="input-form"})
    <br />
    <br />

    <button class="btn btn-success" type="submit">Editeaza comentariul</button>
}
    </div>
</div>
