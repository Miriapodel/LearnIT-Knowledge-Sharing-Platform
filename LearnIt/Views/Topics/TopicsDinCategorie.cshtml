@model LearnIt.Models.Topic

@if(ViewBag.exTopics == true)
{
    <h1>Topic-uri din @ViewBag.NumeCategorie</h1>
    <br />
    <br />

    @foreach (var topics in ViewBag.Topics)
    {
        <div class="card card shadow mb-5 bg-white rounded">
            <div class="card-header">
                @topics.Category.Name
            </div>
            <div class="card-body">
                <h5 class="card-title">@topics.Title</h5>
                <p class="card-text">@Html.Raw(@topics.Description)</p>
                <p>@topics.DateTime</p>
                <a href="/Topics/Show/@topics.Id" class="btn btn-primary"> Afisare Topic</a>
            </div>
        </div>

        <br />
    }
    @if (ViewBag.ELogat == true)
    {
        <a href="/Topics/New" class="btn btn-outline-primary">Adauga un topic nou</a>
    }

    <a href="/Categories/Index" class="btn btn-outline-primary">Inapoi la categorii</a>
    <br />
    <br />

    <div>
        <nav aria-label="Page navigation example">
            <ul class="pagination">
                <li class="page-item">
                    <a class="page-link"
                       href="/Topics/TopicsDinCategorie/@ViewBag.idCatVechi?page=1" aria-label="Previous">
                        <span aria-hidden="true">&laquo;</span>
                    </a>
                </li>
                @for (int i = 1; i <= ViewBag.lastPage; i++)
                {
                    <li class="page-item">
                        <a class="page-link"
                           href="/Topics/TopicsDinCategorie/@ViewBag.idCatVechi?page=@i">@(i)</a>
                    </li>
                }
                <li class="page-item">
                    <a class="page-link"
                       href="/Topics/TopicsDinCategorie/@ViewBag.idCatVechi?page=@(ViewBag.lastPage)" aria-
                       label="Next">

                        <span aria-hidden="true">&raquo;</span>
                    </a>
                </li>
            </ul>
        </nav>
    </div>
}
else
{
    <h1>Momentan nu exista topic-uri in aceasta categorie</h1>  
    <br />
    <br />

    @if (ViewBag.ELogat == true)
    {
        <a href="/Topics/New" class="btn btn-outline-primary">Adauga un topic nou</a>
    }
}

