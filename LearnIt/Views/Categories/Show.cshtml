@model LearnIt.Models.Category
@if (TempData["Message"] != null)
{
    <div class="tempdata">@TempData["Message"]</div>
}

<div class="card card shadow p-3 mb-5 bg-white rounded" style="width: 25rem;">
    <div class="card-body">
        <h2 class="card-title">@Model.Name</h2>

        @if(ViewBag.EsteAdmin == true)
        {
            <div class="d-flex justify-content-between">
                <a href="/Categories/Edit/@Model.Id" class="btn btn-info">Editeaza Categoria</a>

                <form method="post" action="/Categories/Delete/@Model.Id">

                    <button class="btn btn-danger" type="submit">Sterge categoria</button>

                </form>
            </div>
        }
       
    </div>
</div>
<br />

<a href="/Categories/Index" class="btn btn-outline-primary">Inapoi la lista categoriilor</a>

